@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader Style="font-family:Bahnschrift;background-color:#ee3026;">
        Road Safety Allies
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%" Style="font-family:Bahnschrift;">
        <AuthorizeView>
            <Authorized>
                <NavMenu />
            </Authorized>
        </AuthorizeView>
        <FluentBodyContent Class="body-content" Style="font-family:Bahnschrift;">
            <div class="content" style="font-family:Bahnschrift;">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter Style="font-family:Bahnschrift">
        <div class="link1">
            <a href="https://www.fluentui-blazor.net" target="_blank">Contact and Support</a>
        </div>
        <div class="link2">
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Us</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
